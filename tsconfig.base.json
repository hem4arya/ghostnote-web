{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@features/test-feature/*": [
        "packages/test-feature/src/*"
      ],
      "@features/test-feature": [
        "packages/test-feature/index.ts"
      ],
      "@features/Navbar/*": [
        "packages/Navbar/src/*"
      ],
      "@features/Navbar": [
        "packages/Navbar/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/examples/**",
    "**/lexical/examples/**",
    "**/vite.config.*",
    "dist",
    ".next",
    "build"
  ]
}