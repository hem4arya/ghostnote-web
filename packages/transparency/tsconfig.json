{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "../..",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./packages/shared-lib/src/*"],
      "@ui/*": ["./packages/ui-components/src/components/*"],
      "@shell/*": ["./packages/shell/src/*"],
      "@transparency/*": ["./packages/transparency/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../ui-components" },
    { "path": "../shared-lib" },
    { "path": "../shell" }
  ]
}
