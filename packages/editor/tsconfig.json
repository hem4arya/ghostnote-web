{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "../..",
    "strict": false,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./packages/shared-lib/src/*"],
      "@ui/*": ["./packages/ui-components/src/components/*"],
      "@editor/*": ["./packages/editor/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/lexical/libdefs/**/*.js",
    "src/lexical/examples/**/*",
    "src/lexical/jest.config.js"
  ],
  "references": [{ "path": "../ui-components" }, { "path": "../shared-lib" }]
}
