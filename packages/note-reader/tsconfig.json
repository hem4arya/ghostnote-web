{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "../..",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./packages/shared-lib/src/*"],
      "@ui/*": ["./packages/ui-components/src/components/*"],
      "@shell/*": ["./packages/shell/src/*"],
      "@access-control/*": ["./packages/access-control/src/*"],
      "@notes/*": ["./packages/notes/src/*"],
      "@note-reader/*": ["./packages/note-reader/src/*"]
    }
  },
  "include": ["src/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../ui-components" },
    { "path": "../shared-lib" },
    { "path": "../shell" },
    { "path": "../access-control" },
    { "path": "../notes" }
  ]
}
