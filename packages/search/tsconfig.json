{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "outDir": "dist",
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@search-components/*": ["./packages/search/src/components/*"],
      "@search-hooks/*": ["./packages/search/src/hooks/*"],
      "@search-types/*": ["./packages/search/src/types/*"],
      "@/*": ["./src/*", "./lib/*", "./packages/ui-components/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../ui-components" }
  ]
}
