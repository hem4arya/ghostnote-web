{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "outDir": "dist",
    "jsx": "react-jsx",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "paths": {
      "@shell-components/*": ["./packages/shell/src/components/*"],
      "@/*": ["./src/*", "./lib/*", "./packages/ui-components/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../ui-components" }
  ]
}
