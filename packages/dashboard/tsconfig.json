{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "outDir": "dist",
    "jsx": "react-jsx",
    "paths": {
      "@dashboard-components/*": ["./packages/dashboard/src/components/*"],
      "@/*": ["./src/*", "./lib/*", "./packages/ui-components/src/*"],
      "@/lib/*": ["./lib/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../ui-components" }
  ]
}
