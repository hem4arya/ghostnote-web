{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "../..",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./packages/shared-lib/src/*"],
      "@ui/*": ["./packages/ui-components/src/components/*"],
      "@notes/*": ["./packages/notes/src/*"]
    }
  },
  "include": ["src/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../ui-components" }]
}
