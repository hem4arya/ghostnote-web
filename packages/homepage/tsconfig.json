{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../../src/*", "../../lib/*"],
      "@components/*": ["../../src/components/*"],
      "@homepage-components/*": ["src/components/*"],
      "@homepage-hooks/*": ["src/hooks/*"],
      "@homepage-types/*": ["src/types/*"],
      "@homepage-utils/*": ["src/utils/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
